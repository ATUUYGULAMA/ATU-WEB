<html>
<head>
    <meta charset="UTF-8">
    <meta
            name="viewport"
            content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    >
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- define links -->
    <link rel="stylesheet" href="/css/signup.css">
    <!-- import Bootstrap 5-->
    <link rel="stylesheet" href="/sources/bootstrap.css">
    <title>SignUP</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="/css/kayıtol.css">
</head>
<body>
<div class="wrapper">
    <div class="title-text">

        <div class="title login"> <i class="fas fa-user"></i>
            Kullanıcı Kayıt</div>
        <div class="title signup"><i class="fas fa-store"></i>
            </i>Mağaza Kayıt</div>
    </div>
    <div class="form-container">
        <div class="slide-controls">
            <input type="radio" name="slide" id="login" checked>
            <input type="radio" name="slide" id="signup">
            <label for="login" class="slide login">Kullanıcı</label>
            <label for="signup" class="slide signup">Mağaza</label>
            <div class="slider-tab">
            </div>
        </div>
        <div class="form-inner">
            <form action="/signup" method="POST" class="login">
                <div class="field">
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="Kullanıcı Adı" name="username" required>
                </div>
                <div class="field">
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="Ad" name="firstName" required>
                </div>
                <div class="field">
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="Soyad" name="lastName" required>
                </div>

                <div class="field">
                    <i class="fas fa-envelope"></i>
                    <input type="email" placeholder="Mail Adresi" name="email" required>
                </div>

                <div class="field">
                    <i class="fas fa-phone-alt"></i>
                    <input type="number" placeholder="Telefon numarası" name="phone" required>
                </div>

                <div class="field">
                    <i class="fas fa-lock"></i>
                    <input type="password" placeholder="Şifre" name="password" required>
                </div>

                <div class="field">
                    <i class="fas fa-lock"></i>
                    <input type="password" placeholder="Şifre Tekrar" name="password2" required>
                </div>

                <input type="submit" class="btnup solid" value="Kaydol">
            </form>

            <form action="/signup" method="POST" class="signup">
                <div class="field">
                    <i class="fas fa-store"></i>
                    <input type="text" placeholder="Mağaza Adı" name="storeName" required>
                </div>
                <div class="field">
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="Kullanıcı Adı" name="username" required>
                </div>

                <div class="field">
                    <i class="fas fa-envelope"></i>
                    <input type="email" placeholder="Mail Adresi" name="email" required>
                </div>

                <div class="field">
                    <i class="fas fa-phone-alt"></i>
                    <input type="number" placeholder="Telefon numarası" name="phone" required>
                </div>

                <div class="field">
                    <i class="fas fa-lock"></i>
                    <input type="password" placeholder="Şifre" name="password" required>
                </div>
                <div class="field">
                    <i class="fas fa-lock"></i>
                    <input type="password" placeholder="Şifre Tekrar" name="password2" required>
                </div>
                <div class="field">
                    <i class="fas fa-home"></i>
                    <textarea id="adres" cols="30" rows="2" placeholder="Adres" name="address"></textarea>
                </div>
                <input type="hidden" value="store" name="type">
                <input type="submit" class="btnup solid" value="Kaydol">
            </form>
        </div>
    </div>
</div>
<script src="/js/signup.js"></script>


<%- include ('../partails/footer') -%>
